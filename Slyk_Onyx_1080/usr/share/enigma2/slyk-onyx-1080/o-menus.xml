<skin>
	<!-- menu button -->
	<screen name="Menu" position="0,0" size="1920,1080" flags="wfNoBorder" backgroundColor="transparent" title="Main Menu">
		<panel name="template1"/>
		<panel name="h-separator-tr"/>
		<panel name="title2"/>
		<widget source="menu" render="Listbox" position="527,321" size="954,645" foregroundColor="white" backgroundColor="mid" backgroundColorSelected="bg-selected" selectionPixmap="o-selectbars/select-636-48.png" backgroundPixmap="o-selectbars/blank.png" itemHeight="72" font="Regular;35" transparent="1" enableWrapAround="1" scrollbarMode="showNever">
			<convert type="TemplatedMultiContent">
			{"template": [	
			MultiContentEntryText(pos = (15,0), size = (924,72), flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 0)
			],
			"fonts": [gFont("Regular",35)],
			"itemHeight": 72
			}
			</convert>
		</widget>
		<ePixmap pixmap="o-backgrounds/menu-gradient.png" position="527,900" size="954,75" alphatest="blend" zPosition="2"/>
		<panel name="whatson-top"/>
		<panel name="whatson-right"/>
		<!--<panel name="New-Buttons" /> -->
	</screen>
	<screen name="Setup-Default" position="0,0" size="1920,1080" backgroundColor="transparent" flags="wfNoBorder">
		<panel name="template1"/>
		<panel name="h-separator-tr"/>
		<panel name="whatson-top"/>
		<panel name="title2"/>
		<panel name="config"/>
		<panel name="New-Buttons"/>
		<ePixmap pixmap="o-backgrounds/menu-gradient.png" position="527,900" size="954,75" alphatest="blend" zPosition="2"/>
	</screen>
	<!-- settings screens -->
	<screen name="Setup" position="0,0" size="1920,1080" backgroundColor="transparent" flags="wfNoBorder">
		<panel name="Setup-Default"/>
		<panel name="description"/>
		<panel name="HelpWindow"/>
		<panel name="footnote"/>
		<panel name="VKeyIcon"/>	
		<ePixmap name="infoIcon" pixmap="buttons/key_info.png" position="1845,1025" size="38,38" alphatest="blend"/>
		<ePixmap name="menuIcon" pixmap="buttons/key_menu.png" position="1793,1025" size="38,38" alphatest="blend"/>
		<applet type="onLayoutFinish">
from enigma import eSize, ePoint, gFont
from skin import parseColor

if "infoIcon" in self:
	self["infoIcon"].hide()
if "menuIcon" in self:
	self["menuIcon"].hide()
	
if self.instance.getTitle() == "EPG Import Configuration":
	if "footnote" in self:
		self["footnote"].instance.move(ePoint(1518, 541))
		self["footnote"].instance.resize(eSize(372, 510))
		self["footnote"].instance.setFont(gFont("Regular", 27))
		self["footnote"].instance.setForegroundColor(parseColor("colour2"))
		self["footnote"].instance.setBackgroundColor(parseColor("midright"))
		
	if "infoIcon" in self:
		self["infoIcon"].show()
	if "menuIcon" in self:
		self["menuIcon"].show()	
</applet>
	</screen>
	<screen name="VideoSetup" position="0,0" size="1920,1080" backgroundColor="transparent" flags="wfNoBorder">
